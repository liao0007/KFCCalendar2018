<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/drawer_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
    >


    <RelativeLayout
        android:id="@+id/activity_customer_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <SurfaceView
            android:id="@+id/suf_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/img_ar"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/ar_icon"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:orientation="vertical"
            android:visibility="visible">
            <ImageView
                android:id="@+id/img_switch"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="@mipmap/chagecamera"/>
            <ImageView
                android:id="@+id/img_xz"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="@mipmap/album"
                android:layout_marginTop="15dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/firststep"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="173dp"
            android:layout_marginBottom="100dp"
            />

        <ImageView
            android:id="@+id/img_start"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:background="@mipmap/takephoto"
            />

        <RelativeLayout
            android:id="@+id/rl_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                />
            <FrameLayout
                android:id="@+id/fl_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_finish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <ImageView
                android:id="@+id/img_save_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />

            <ImageView
                android:id="@+id/img_paster"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="@mipmap/paster"
                />
            <ImageView
                android:id="@+id/img_share"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="@mipmap/share"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/second_paster"
                android:layout_below="@+id/img_paster"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/secondstep"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/img_restart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/retakeimg"/>
                <ImageView
                    android:id="@+id/img_save"
                    android:layout_marginLeft="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/saveimg"/>
                <ImageView
                    android:id="@+id/img_again"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/again"
                    android:visibility="gone"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/img_savetip"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:src="@mipmap/saveimgtip"
                android:visibility="gone"
                android:layout_centerInParent="true"/>
            <LinearLayout
                android:id="@+id/ll_share"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:background="@color/translate">
                <TextView
                    android:id="@+id/txt_frends"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="分享到微信好友"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:background="@color/share"
                    />

                <TextView
                    android:id="@+id/txt_frendsquare"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="分享到微信朋友圈"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:background="@color/share"
                    />

                <TextView
                    android:id="@+id/txt_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="取消"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/skip"
                    android:background="#F5F5F5"
                    />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    <!--这是侧边栏滑动时出现的右边布局内容-->
    <LinearLayout
        android:id="@+id/drawer_content"
        android:layout_width="155dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/ll_left"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:paddingTop="20dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/ll_close"
                android:layout_width="10dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/close_shape">
            <ImageView
                android:layout_width="7dp"
                android:layout_height="37dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@mipmap/colse"/>
            </LinearLayout>
            <ListView
                android:id="@+id/lv_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:divider="@null"
                android:layout_above="@+id/ll_close"
                android:background="#00000000"></ListView>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:background="@color/rightbg">

            <ListView
                android:id="@+id/lv_right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:scrollbars="none"
                android:divider="@color/rightbg"
                android:dividerHeight="15dp"
                android:listSelector="@null"
                ></ListView>
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>



