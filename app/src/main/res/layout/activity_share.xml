<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/contentDrawerLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
>

    <ImageView
            android:id="@+id/photoImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawingCacheQuality="high"
    />


    <ImageButton
            android:id="@+id/shareImageButton"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:srcCompat="@mipmap/share"/>

    <ImageButton
            android:id="@+id/retakeImageButton"
            android:layout_width="210dp"
            android:layout_height="44dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_marginBottom="32dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" app:srcCompat="@mipmap/again"/>

    <ImageView
            android:id="@+id/saveSuccessImageView"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:src="@mipmap/saveimgtip"
            android:layout_centerInParent="true"/>

    <ImageView
            android:id="@+id/saveSuccessImageView"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:src="@mipmap/saveimgtip"
            android:layout_centerInParent="true"/>

    <!-- share dialog group -->
    <LinearLayout
            android:id="@+id/shareDialogLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
    >

        <Button
                android:id="@+id/shareToSessionButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="分享到微信好友"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:background="@color/secondaryRed"
        />

        <Button
                android:id="@+id/shareToCircleButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="分享到微信朋友圈"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:background="@color/secondaryRed"
        />

        <Button
                android:id="@+id/shareCancelButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="取消"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/grey"
                android:background="@color/white"
        />
    </LinearLayout>


</RelativeLayout>



