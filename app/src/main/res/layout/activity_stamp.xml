<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/contentDrawerLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
>


    <RelativeLayout
            android:id="@+id/activity_customer_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >

        <SurfaceView
                android:id="@+id/cameraSurfaceView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical"
                android:visibility="visible" android:id="@+id/linearLayout">

        </LinearLayout>

        <RelativeLayout
                android:id="@+id/rl_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:visibility="gone">

            <ImageView
                    android:id="@+id/img_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
            />
            <FrameLayout
                    android:id="@+id/fl_root"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_finish"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

            <LinearLayout
                    android:id="@+id/ll_save_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                <ImageView
                        android:id="@+id/saveImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                />
            </LinearLayout>

            <ImageButton
                    android:id="@+id/showStampGroupImageButton"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:background="@mipmap/paster"
                    style="@style/Widget.AppCompat.Button.Borderless"
            />

            <ImageButton
                    android:id="@+id/shareImageButton"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="40dp"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:background="@mipmap/share"
                    android:visibility="gone"
                    style="@style/Widget.AppCompat.Button.Borderless"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
            >
                <ImageButton
                        android:id="@+id/returnImageButton"
                        android:layout_width="100dp"
                        android:layout_height="44dp"
                        android:background="@mipmap/returnimg"
                        style="@style/Widget.AppCompat.Button.Borderless"
                />
                <ImageButton
                        android:id="@+id/saveImageButton"
                        android:layout_marginLeft="10dp"
                        android:layout_width="100dp"
                        android:layout_height="44dp"
                        android:background="@mipmap/saveimg"
                        style="@style/Widget.AppCompat.Button.Borderless"
                />
                <ImageButton
                        android:id="@+id/retakeImageButton"
                        android:layout_width="210dp"
                        android:layout_height="44dp"
                        android:background="@mipmap/again"
                        android:visibility="gone"
                        style="@style/Widget.AppCompat.Button.Borderless"
                />
            </LinearLayout>

            <ImageView
                    android:id="@+id/saveSuccessImageView"
                    android:layout_width="180dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/saveimgtip"
                    android:visibility="gone"
                    android:layout_centerInParent="true"/>

            <LinearLayout
                    android:id="@+id/shareDialogLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true"
                    android:background="@android:color/transparent">

                <Button
                        android:id="@+id/shareToSessionButton"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="分享到微信好友"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:background="@color/secondaryRed"
                />

                <Button
                        android:id="@+id/shareToCircleButton"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="分享到微信朋友圈"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:background="@color/secondaryRed"
                />

                <Button
                        android:id="@+id/shareCancelButton"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="取消"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/grey"
                        android:background="@android:color/white"
                />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <!--这是侧边栏滑动时出现的右边布局内容-->
    <LinearLayout
            android:id="@+id/stampGroupContentLinearLayout"
            android:layout_width="168dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:orientation="horizontal">

        <RelativeLayout
                android:id="@+id/stampGroupControlRelativeLayout"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:paddingTop="20dp"
                android:orientation="vertical"
        >
            <LinearLayout
                    android:id="@+id/stampGroupControllerCloseLinearLayout"
                    android:layout_width="10dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/close_shape">
                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="96dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@mipmap/close"/>
            </LinearLayout>

            <ListView
                    android:id="@+id/stampGroupListView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:divider="@null"
                    android:layout_above="@+id/stampGroupControllerCloseLinearLayout"
                    android:background="#00000000"></ListView>

        </RelativeLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:background="@color/rightbg">

            <ListView
                    android:id="@+id/lv_right"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:scrollbars="none"
                    android:divider="@color/rightbg"
                    android:dividerHeight="15dp"
                    android:listSelector="@null"
            ></ListView>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>



